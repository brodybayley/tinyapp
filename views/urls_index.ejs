<body>

  <%- include('partials/_header') %>

  <main style="margin: 1em;">
    <h3>My URLs</h3>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Short URL</th>
          <th scope="col">Long URL</th>
          <th scope="col">Edit</th>
          <th scope="col">Delete</th>
        </tr>
      </thead>
      <tbody>
        <% for(let url in urls) { %>
        <tr>
          <td><%= url %></td>
          <td><%= urls[url].longURL %></td>
          <td>
            <p style="background-color: white;" class="btn btn-primary" type="button"> <a style="text-decoration: none;"
                href="/urls/<%= url %>">edit</a>
            </p>
          </td>
          <td>
            <form method="POST" action="/urls/<%= url %>/delete"> <button type="submit"
                class="btn btn-danger">Delete</button></form>
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </main>